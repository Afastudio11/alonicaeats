# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and fill in actual values
# NEVER commit .env to git - it's already in .gitignore!

# Application Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (REQUIRED)
# VPS localhost example: postgresql://alonica_user:YOUR_PASSWORD@localhost:5432/alonica_db
# Managed database: postgresql://user:pass@host:5432/dbname
DATABASE_URL=postgresql://alonica_user:YOUR_DB_PASSWORD_HERE@localhost:5432/alonica_db
# Set to 'false' for localhost, 'true' for managed databases with SSL
DATABASE_SSL=false

# Security Secrets (REQUIRED - GENERATE STRONG RANDOM SECRETS!)
# Generate with: openssl rand -base64 48
SESSION_SECRET=your_session_secret_change_this_in_production
JWT_SECRET=your_jwt_secret_change_this_in_production

# Application URLs (Update with your actual domain)
ALLOWED_ORIGINS=https://kasirpos.space,https://www.kasirpos.space,http://148.230.101.194
FRONTEND_URL=https://kasirpos.space

# Payment Integration - Midtrans (Optional for development)
# Set to 'false' for testing with mock payments
# Set to 'true' for real payments (requires valid Midtrans keys)
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_SERVER_KEY=optional-set-for-production-payments
MIDTRANS_CLIENT_KEY=optional-set-for-production-payments

# Google Cloud Storage (Optional - only if using file uploads)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# GCS_BUCKET=your-bucket-name
# GOOGLE_CLOUD_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Logging
LOG_LEVEL=info

# Admin User Setup (Optional - for initial setup only)
# INITIAL_ADMIN_USERNAME=admin
# INITIAL_ADMIN_PASSWORD=

# Replit Production Variables (ignore if deploying to VPS)
# REPLIT_DB_URL=your-replit-db-url